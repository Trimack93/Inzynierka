<Window x:Class="WpfApplication1.Views.ChooseAlgorithmView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1.Views"
        mc:Ignorable="d"
        Title="Wybierz algorytm" Width="1024" Height="640" Background="RoyalBlue"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>

        <Style x:Key="ChooseAlgorithmButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Width" Value="165" />
            <Setter Property="Height" Value="165" />
            <Setter Property="Background" Value="LimeGreen" />
            <Setter Property="Padding" Value="0,0,0,10" />
        </Style>

        <Style x:Key="ChooseAlgorithmTextblockStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Calibri" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="Snow" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
        </Style>

        <Style x:Key="ChooseAlgorithmImageStyle" TargetType="{x:Type Image}">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Stretch" Value="None" />
        </Style>
        
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Algorytmy grafowe" FontFamily="Footlight MT Light" FontSize="36" Foreground="Cornsilk" HorizontalAlignment="Center" Margin="0,10,0,5" />
            <TextBlock Text="Projekt inzynierski" FontFamily="Footlight MT Light" FontSize="18" Foreground="Cornsilk" HorizontalAlignment="Center" />
        </StackPanel>

        <StackPanel Grid.Row="2">
            <TextBlock Text="Wybierz algorytm:" FontFamily="Calibri" FontSize="20" Foreground="Cornsilk" HorizontalAlignment="Center" Margin="0,0,0,15" />
            
            <StackPanel HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <Button Style="{StaticResource ChooseAlgorithmButtonStyle}" Margin="0,0,50,0">
                        <Grid>
                            <Image Source="/Resources/1.png" Style="{StaticResource ChooseAlgorithmImageStyle}" />
                            <TextBlock Text="Przeszukiwanie wszerz" Style="{StaticResource ChooseAlgorithmTextblockStyle}" />
                        </Grid>
                    </Button>

                    <Button Style="{StaticResource ChooseAlgorithmButtonStyle}" Margin="0,0,50,0">
                        <Grid>
                            <Image Source="/Resources/2.png" Style="{StaticResource ChooseAlgorithmImageStyle}" />
                            <TextBlock Text="Przeszukiwanie w głąb" Style="{StaticResource ChooseAlgorithmTextblockStyle}" />
                        </Grid>
                    </Button>

                    <Button Style="{StaticResource ChooseAlgorithmButtonStyle}" Margin="0,0,50,0">
                        <Grid>
                            <Image Source="/Resources/3.png" Style="{StaticResource ChooseAlgorithmImageStyle}" />
                            <TextBlock Text="Sortowanie topologiczne" Style="{StaticResource ChooseAlgorithmTextblockStyle}" />
                        </Grid>
                    </Button>

                    <Button Style="{StaticResource ChooseAlgorithmButtonStyle}">
                        <Grid>
                            <Image Source="/Resources/4.png" Style="{StaticResource ChooseAlgorithmImageStyle}" />
                            <TextBlock Text="Algorytm Kruskala" Style="{StaticResource ChooseAlgorithmTextblockStyle}" />
                        </Grid>
                    </Button>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Style="{StaticResource ChooseAlgorithmButtonStyle}" Margin="0,0,50,0">
                        <Grid>
                            <Image Source="/Resources/5.png" Style="{StaticResource ChooseAlgorithmImageStyle}" />
                            <TextBlock Text="Wykrywanie dwudzielności" Style="{StaticResource ChooseAlgorithmTextblockStyle}" />
                        </Grid>
                    </Button>

                    <Button Style="{StaticResource ChooseAlgorithmButtonStyle}" Margin="0,0,50,0">
                        <Grid>
                            <Image Source="/Resources/6.png" Style="{StaticResource ChooseAlgorithmImageStyle}" />
                            <TextBlock Text="Algorytm Dijkstry" Style="{StaticResource ChooseAlgorithmTextblockStyle}" />
                        </Grid>
                    </Button>

                    <Button Style="{StaticResource ChooseAlgorithmButtonStyle}">
                        <Grid>
                            <Image Source="/Resources/7.png" Style="{StaticResource ChooseAlgorithmImageStyle}" />
                            <TextBlock Text="Algorytm Bellmana-Forda" Style="{StaticResource ChooseAlgorithmTextblockStyle}" />
                        </Grid>
                    </Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Bottom" >
            <Button Content="Powrót" Height="25" Width="80" Click="ReturnButton_Click" Background="Orange" VerticalAlignment="Center" Margin="10,0,0,10" TextBlock.FontWeight="DemiBold" Style="{StaticResource BaseButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>

    
    
